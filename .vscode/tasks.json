{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-c",
            "type": "shell",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}