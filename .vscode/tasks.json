{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: build active file",
            "command": "${command:workbench.action.tasks.runTask}",
            "windows": {
                "command": "gcc"
            },
            "linux": {
                "command": "/usr/bin/gcc"
            },
            "osx": {
                "command": "/usr/bin/clang"
            },
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Automatically uses clang on macOS, gcc on Linux."
        }
    ],
    "version": "2.0.0"
}